
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      // This is a hardcoded UID for the super admin.
      return isSignedIn() && request.auth.uid == 'F7hBfGV8QYhgZ7KXbcmThjlisuo2';
    }

    // Grant admin full access to everything
    match /{path=**} {
      allow read, write: if isAdmin();
    }

    match /users/{userId} {
      allow get, update: if isOwner(userId);
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow list: if isAdmin();
    }
    
    // User-specific sub-collections
    match /users/{userId}/rentals/{rentalId} {
      allow read, write: if isOwner(userId);
    }

    match /users/{userId}/messages/{messageId} {
      allow read, list, update: if isOwner(userId) || isAdmin();
    }
    
    match /users/{userId}/deposit_transactions/{depositId} {
      allow read, list, write: if isOwner(userId);
    }
    
    match /users/{userId}/withdrawal_transactions/{withdrawalId} {
      allow read, list, write: if isOwner(userId);
    }

    match /mining_machines/{machineId} {
      allow get, list: if isSignedIn();
    }

    // Global collections for user creation
    match /deposit_transactions/{depositId} {
      allow create: if isSignedIn();
      allow read, update: if isAdmin();
    }
    
    match /withdrawal_transactions/{withdrawalId} {
      allow create: if isSignedIn();
      allow read, update: if isAdmin();
    }

    // Collection Group queries for Admin
    match /{path=**}/deposit_transactions/{depositId} {
      allow read, list: if isAdmin();
    }

    match /{path=**}/withdrawal_transactions/{withdrawalId} {
      allow read, list: if isAdmin();
    }
    
    match /redeem_codes/{code} {
      allow get: if isSignedIn();
      allow list, create: if isAdmin();
      allow update: if isSignedIn() && resource.data.used == false && request.resource.data.used == true || isAdmin();
    }

    match /notifications/{notificationId} {
        allow read, list, create: if isAdmin();
    }
  }
}
