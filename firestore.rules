
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      // This is a hardcoded UID for the super admin.
      return isSignedIn() && request.auth.uid == 'GEGZNzOWg6bnU53iwJLzL5LaXwR2';
    }

    match /users/{userId} {
      allow get, update: if isOwner(userId) || isAdmin();
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow list: if isAdmin();
    }

    match /mining_machines/{machineId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isAdmin();
    }

    match /users/{userId}/rentals/{rentalId} {
      allow read, write: if isOwner(userId) || isAdmin();
    }

    match /deposit_transactions/{depositId} {
      allow get: if isSignedIn() && (resource.data.userAccountId == request.auth.uid || isAdmin());
      allow create: if isSignedIn() && request.resource.data.userAccountId == request.auth.uid;
      allow update: if isAdmin();
      allow list: if isAdmin() || (isSignedIn() && resource.data.userAccountId == request.auth.uid);
    }

    match /withdrawal_transactions/{withdrawalId} {
      allow get: if isSignedIn() && (resource.data.userAccountId == request.auth.uid || isAdmin());
      allow create: if isSignedIn() && request.resource.data.userAccountId == request.auth.uid;
      allow update: if isAdmin();
      allow list: if isAdmin() || (isSignedIn() && resource.data.userAccountId == request.auth.uid);
    }
    
    match /redeem_codes/{code} {
      allow get: if isSignedIn();
      allow create: if isAdmin();
      allow update: if isSignedIn() && resource.data.used == false && request.resource.data.used == true;
      allow list: if isAdmin();
    }

    match /daily_limits/{limitId} {
        allow get, list: if isSignedIn();
        allow write: if isSignedIn(); // Should be more secure in production
    }

    match /notifications/{notificationId} {
      allow read, write: if isAdmin();
    }
  }
}
