
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      // This is a hardcoded UID for the super admin.
      return isSignedIn() && request.auth.uid == 'F7hBfGV8QYhgZ7KXbcmThjlisuo2';
    }

    match /users/{userId} {
      allow get, update: if isOwner(userId) || isAdmin();
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow list: if isAdmin();
    }
    
    // User-specific sub-collections
    match /users/{userId}/rentals/{rentalId} {
      allow read, write: if isOwner(userId);
    }

    match /users/{userId}/messages/{messageId} {
      allow write: if isAdmin(); // Admin can send messages to users
      allow read, list, update: if isOwner(userId) || isAdmin();
    }
    
    match /users/{userId}/deposit_transactions/{depositId} {
      allow read, list, write: if isOwner(userId);
    }
    
    match /users/{userId}/withdrawal_transactions/{withdrawalId} {
      allow read, list, write: if isOwner(userId);
    }

    match /mining_machines/{machineId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isAdmin();
    }

    // Global collections for Admin review
    match /deposit_transactions {
      allow list, read, update: if isAdmin();
      allow create: if isSignedIn();
      match /{depositId} {
        allow read, update: if isAdmin();
        allow create: if isSignedIn();
      }
    }

    match /withdrawal_transactions {
      allow list, read, update: if isAdmin();
      allow create: if isSignedIn();
       match /{withdrawalId} {
        allow read, update: if isAdmin();
        allow create: if isSignedIn();
      }
    }
    
    match /redeem_codes/{code} {
      allow get: if isSignedIn();
      allow create, list: if isAdmin();
      allow update: if (isSignedIn() && resource.data.used == false && request.resource.data.used == true) || isAdmin();
    }

    match /notifications/{notificationId} {
      allow read, write, list: if isAdmin();
    }

    // Collection Group permissions for admin
    match /{path=**}/deposit_transactions/{id} {
      allow list, read: if isAdmin();
    }
    match /{path=**}/withdrawal_transactions/{id} {
      allow list, read: if isAdmin();
    }
  }
}
